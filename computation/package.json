{
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "start:prod": "webpack-dev-server --mode production",
    "asbuild:untouched": "asc assembly/index.ts -b build/untouched.wasm -t build/untouched.wat --sourceMap --validate --debug",
    "asbuild:optimized": "asc assembly/index.ts -b build/optimized.wasm -t build/optimized.wat -O3 --sourceMap --validate --optimize --noAssert",
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized",
    "asbuild:watch": "onchange -i 'assembly/**/*' -- npm run asbuild",
    "build": "webpack --mode production",
    "lint": "eslint --ext .ts ./",
    "lint:fix": "eslint --fix --ext .ts ./"
  },
  "dependencies": {
    "assemblyscript": "0.9.4-nightly.20200414",
    "chart.js": "^2.9.3",
    "stats-lite": "^2.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^5.16.0",
    "onchange": "^6.1.0",
    "typescript": "^3.8.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.3"
  }
}
